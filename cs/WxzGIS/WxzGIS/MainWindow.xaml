<Window x:Class="WxzGIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录界面" Height="144.164" Width="248.881" WindowStartupLocation="CenterScreen">
    
    <StackPanel Orientation="Vertical" Margin="10">
        <StackPanel Orientation="Horizontal" >
            <Label Content="用户名：" Width="57"></Label>
            <TextBox x:Name="tbx_usrname" Width="148" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
            <Label Content="密码：" Width="57"></Label>
            <TextBox x:Name="tbx_password" Width="148" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
            <Button x:Name="btn_signIn" Content="登录" Width="100" Margin="0 0 10 0" Click="btn_signIn_Click" />
            <Button x:Name="btn_signUp" Content="注册" Width="100" Click="btn_signUp_Click" />
        </StackPanel>
    </StackPanel>



</Window>
